<Window x:Class="EnterApp.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EnterApp"
        mc:Ignorable="d"
        Title="Панель администратора" Height="400" Width="600">
    <Grid>
        <Label x:Name="WelcomeLabel" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0, 20, 0, 0" />
        <Button Content="Просмотреть логи" Background="GhostWhite"  FontFamily="Times New Roman" FontSize="14" x:Name="ViewLogsButton" Click="ViewLogsButton_Click" Width="120" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20, 70, 0, 0" />
        <Button Content="Просмотреть онлайн пользователей" Background="GhostWhite" FontFamily="Times New Roman" FontSize="14" x:Name="OnlineCheckButton" Click="ViewOnline_Click" Width="230" Height="30" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0, 70, 10, 0" />
        <Button Background="GhostWhite"  FontFamily="Times New Roman" FontSize="16" Click="AddClientButton_Click" Width="200" Height="130" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20, 50, 20, 0">
            <TextBlock TextAlignment="Center" TextWrapping="Wrap">Добавить нового пользователя</TextBlock>
        </Button>
        <Button Background="GhostWhite"  Click="EditClientButton_Click" Width="200" FontFamily="Times New Roman"  FontSize="16" Height="130" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="20, 50, 20, 0">
            <TextBlock TextAlignment="Center" TextWrapping="Wrap">Изменить данные пользователей</TextBlock>
        </Button>
        <Button Content="Выход" Click="LogoutButton_Click" Width="100" Height="30" HorizontalAlignment="Right"  Background="GhostWhite" VerticalAlignment="Bottom" Margin="0, 0, 10, 10" FontFamily="Times New Roman" FontSize="18"/>
    </Grid>
</Window>
